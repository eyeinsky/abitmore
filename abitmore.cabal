common lang
    ghc-options: -Wall
    default-language: GHC2021
    default-extensions:
        DerivingStrategies
        LambdaCase
        NoImplicitPrelude
        DerivingVia
        MultiWayIf
        DataKinds
        TypeFamilies
        AllowAmbiguousTypes

library
    import:           lang
    exposed-modules:  Data.Bit
    build-depends:    base ^>=4.18.2.1
    hs-source-dirs:   src

test-suite bite-test
    import:           lang
    type:             exitcode-stdio-1.0
    hs-source-dirs:   test
    main-is:          Main.hs
    build-depends:
        base ^>=4.18.2.1,
        bite
